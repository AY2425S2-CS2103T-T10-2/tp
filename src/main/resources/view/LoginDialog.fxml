        <Scene>
            <AnchorPane prefHeight="291.0" prefWidth="476.0" stylesheets="@DarkTheme.css">
                <children>
                    <AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="background"
                                stylesheets="@DarkTheme.css">
                        <children>
                            <TextField layoutX="198.0" layoutY="144.0" promptText="Username"/>
                            <PasswordField layoutX="198.0" layoutY="208.0" promptText="Password"/>
                            <Button layoutX="258.0" layoutY="281.0" mnemonicParsing="false"
                                    onMouseClicked="#authenticateUser"
                                    text="Login"/>
