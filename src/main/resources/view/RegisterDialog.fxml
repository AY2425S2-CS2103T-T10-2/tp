<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Register" type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <AnchorPane prefHeight="291.0" prefWidth="476.0" stylesheets="@DarkTheme.css">
                <children>
                    <AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="background"
                                stylesheets="@DarkTheme.css">
                        <children>
                            <TextField fx:id="usernameTextField" layoutX="198.0" layoutY="144.0" promptText="Username"/>
                            <PasswordField fx:id="passwordPasswordField" layoutX="198.0" layoutY="208.0"
                                           promptText="Password"/>
                            <Button layoutX="250.0" layoutY="280.0" mnemonicParsing="false"
                                    onMouseClicked="#registerUser" text="Register"/>
                            <StackPane fx:id="registerDisplayPlaceholder" layoutX="1.0" maxHeight="100" minHeight="100"
                                       prefHeight="100" prefWidth="599.0" styleClass="pane-with-border">
                                <padding>
                                    <Insets bottom="5" left="10" right="10" top="5"/>
                                </padding>
                            </StackPane>
                        </children>
                    </AnchorPane>
                </children>
            </AnchorPane>
        </Scene>
    </scene>
</fx:root>
